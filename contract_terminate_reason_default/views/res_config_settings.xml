<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="res_config_settings_form_view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="contract.res_config_settings_form_view" />
        <field name="arch" type="xml">
            <xpath
                expr="(//div[hasclass('o_settings_container')])[last()]"
                position="inside"
            >

                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="default_contract_termination_reason"
                >
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Default Termination Reason</span>
                        <div class="text-muted">
                            Suggested as a default when terminating a contract
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label
                                    for="contract_terminate_reason_default"
                                    class="col-lg-3 o_light_label"
                                />
                                <field
                                    name="contract_terminate_reason_default"
                                    options="{'no_create_edit': True, 'no_open': True}"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
