<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template
        id="portal_subscription_page"
        name="Contract: show partner on lines"
        inherit_id="website_subscription.portal_subscription_page"
        customize_show="True"
        active="True"
    >
        <xpath expr="//th[@name='th_name']" position="after">
            <th name="th_partner_id" class="text-right">Related partner</th>
        </xpath>

        <xpath expr="//td[@name='td_name']" position="after">
            <td name="td_partner_id" class="text-right">
                <span t-field="line.partner_id.name" />
            </td>
        </xpath>

    </template>
</odoo>
