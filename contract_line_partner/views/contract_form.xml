<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="contract_contract_form_view" model="ir.ui.view">
        <field name="name">Contract form: line partner</field>
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract.contract_contract_form_view" />
        <field name="arch" type="xml">

            <button name="action_show_invoices" position="after">
                <button name="action_show_line_partners" type="object" icon="fa-user" class="oe_stat_button">
                    <field string="Related partners" name="line_partner_count" widget="statinfo"/>
                </button>
            </button>

            <xpath
                expr="//field[@name='contract_line_fixed_ids']/tree/field[@name='name']"
                position="after"
            >
                <field name="partner_id" optional="show" />
            </xpath>

            <xpath
                expr="//field[@name='contract_line_ids']/tree/field[@name='name']"
                position="after"
            >
                <field name="partner_id" optional="show" />
            </xpath>

        </field>
    </record>
</odoo>
