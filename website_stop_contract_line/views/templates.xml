<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Stop contract line js">
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/website_stop_contract_line/static/src/js/line.js"></script>
        </xpath>
    </template>
    <template id="portal_contract_page" inherit_id="contract.portal_contract_page" name="Stop contract" customize_show="True" active="True">
        <xpath expr="//th[@name='th_recurring_next_date']" position="after">
            <th name="th_state" class="text-right">
                State
            </th>
            <th name="th_stop_line" class="text-right"></th>
        </xpath>
        <xpath expr="//td[@name='td_recurring_next_date']" position="after">
            <td name="line-state" class="text-right">
                <t t-if="line.state == 'upcoming'">
                    <span class="badge badge-pill badge-info">Upcoming</span>
                </t>
                <t t-if="line.state == 'in-progress'">
                    <span class="badge badge-pill badge-success">In progress</span>
                </t>
                <t t-if="line.state == 'to-renew'">
                    <span class="badge badge-pill badge-success">To renew</span>
                </t>
                <t t-if="line.state == 'upcoming-close'">
                    <span class="badge badge-pill badge-warning">Upcoming close</span>
                </t>
                <t t-if="line.state == 'closed'">
                    <span class="badge badge-pill badge-warning">Closed</span>
                </t>
            </td>
            <td>
                <button type="button" class="btn btn-secondary btn-sm" t-att-data-line-id="line.id" data-toggle="modal" data-target="#cancelModal">
                    Stop contract line
                </button>
            </td>
        </xpath>
        <xpath expr="//table[@id='sales_order_table']" position="after">
            <div id="cancelModal" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="stop_line_title">Stop contract line</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-label="Close">&amp;times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="container">
                                <div class="col-md-12">
                                    <p>You are about to <strong>stop</strong> <span id="stop_line_object">a contract line</span>.</p>
                                    <p>Are you sure you want to continue?</p>
                                </div>
                            </div>
                            <input type="hidden" id="stop_line_id" name="stop_line_id" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-danger stop-confirm">Stop</button>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
