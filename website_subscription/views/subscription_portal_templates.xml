<?xml version="1.0" ?>
<odoo>
    <template
        id="portal_my_home_menu_subscriptions"
        name="Portal layout : Subscription menu entries"
        inherit_id="portal.portal_breadcrumbs"
        priority="35"
    >
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li
                t-if="page_name == 'Subscriptions'"
                t-attf-class="breadcrumb-item #{'active ' if not subscription else ''}"
            >
                <a t-if="subscription" t-attf-href="/my/subscriptions?{{ keep_query() }}">Subscriptions</a>
                <t t-else="">Subscriptions</t>
            </li>
            <li t-if="subscription" class="breadcrumb-item active">
                <t t-esc="subscription.name" />
            </li>
        </xpath>
    </template>

    <template
        id="portal_my_home_subscription"
        name="Show Subscriptions"
        inherit_id="portal.portal_my_home"
        customize_show="True"
        priority="30"
    >
        <div id="portal_client_category" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="icon" t-value="'/website_subscription/static/src/img/subscription.svg'"/>
                <t t-set="title">Subscriptions</t>
                <t t-set="text">View and manage your subscriptions</t>
                <t t-set="url" t-value="'/my/subscriptions'" />
                <t t-set="placeholder_count" t-value="'subscription_count'" />
            </t>
        </div>
    </template>

    <template id="portal_my_subscriptions" name="My subscriptions">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True" />
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Subscriptions</t>
            </t>
            <t t-if="not subscriptions">
                <p>There are currently no subscriptions for your account.</p>
            </t>
            <div class="container portal_my_subscriptions">
                <t t-if="subscriptions" t-call="portal.portal_table">
                    <thead>
                        <tr class="active">
                            <th>Name</th>
                            <th>Products</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="subscriptions" t-as="subscription">
                            <tr>
                                <td>
                                    <a
                                        t-attf-href="/my/subscriptions/{{subscription.id}}"
                                        t-att-title="subscription.name"
                                    >
                                        <t
                                            t-esc="subscription.name"
                                            t-if="subscription.name != '/'"
                                        />
                                    </a>
                                </td>

                                <td>
                                    <t t-esc="','.join(subscription.mapped('sale_subscription_line_ids.product_id.name'))" />
                                </td>

                            </tr>
                        </t>
                    </tbody>
                </t>
            </div>
        </t>
    </template>

