                        <div id="customer_information" class="row mt4">
                            <div
                                t-if="subscription.partner_id"
                                class="col-12 col-md-6 mb-4 mb-md-0"
                            >
                                <h6>
                                    <strong>Customer</strong>
                                </h6>
                                <div class="row">
                                    <div class="col flex-grow-0 pr-3">
                                        <img
                                            t-if="subscription.partner_id.image_128"
                                            class="rounded-circle mt-1 o_portal_contact_img"
                                            t-att-src="image_data_uri(subscription.partner_id.image_128)"
                                            alt="Contact"
                                        />
                                        <img
                                            t-else=""
                                            class="rounded-circle mt-1 o_portal_contact_img"
                                            src="/web/static/src/img/user_menu_avatar.png"
                                            alt="Contact"
                                        />
                                    </div>
                                    <div class="col pl-sm-0">
                                        <address
                                            t-field="subscription.partner_id"
                                            t-options='{"widget": "contact", "fields": ["name", "email", "phone"]}'
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="product_information" class="row mt32">
                            <h6>
                                <strong>Subscription</strong>
                            </h6>
                            <div class="col-12 col-md-6 mb-4 mb-md-0">
                                <div
                                    t-if="subscription.date_start"
                                    class="row mb-2 mb-sm-1"
                                >
                                    <div class="col-12 col-sm-4">
                                        <span>Date start</span>
                                    </div>
                                    <div class="col-12 col-sm-8">
                                        <span
                                            t-field="subscription.date_start"
                                            t-options='{"widget": "date"}'
                                        />
                                    </div>
                                </div>
                                <div t-if="subscription.date" class="row mb-2 mb-sm-1">
                                    <div class="col-12 col-sm-4">
                                        <span>Date end</span>
                                    </div>
                                    <div class="col-12 col-sm-8">
                                        <span
                                            t-field="subscription.date"
                                            t-options='{"widget": "date"}'
                                        />
                                    </div>
                                </div>
                                <div
                                    t-if="subscription.recurring_next_date"
                                    class="row mb-2 mb-sm-1"
                                >
                                    <div class="col-12 col-sm-4">
                                        <span>Next invoice</span>
                                    </div>
                                    <div class="col-12 col-sm-8">
                                        <span
                                            t-field="subscription.recurring_next_date"
                                            t-options='{"widget": "date"}'
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="item_details" class="row mt32">
                            <table class="table table-sm" id="subscriptions_table">
                                <thead class="bg-100">
                                    <tr>
                                        <th
                                            name="th_product"
                                            class="text-left"
                                        >Product</th>
                                        <th
                                            name="th_name"
                                            class="text-left d-none"
                                        >Description</th>
                                        <th
                                            name="th_quantity"
                                            class="text-right"
                                        >Quantity</th>
                                        <th
                                            name="th_price_unit"
                                            class="text-right"
                                        >Price unit</th>
                                        <th
                                            name="th_discount"
                                            class="text-right"
                                        >Discount (%)</th>
                                        <th
                                            name="th_price_subtotal"
                                            class="text-right"
                                        >Sub Total</th>
                                    </tr>
                                </thead>
                                <tbody class="subscription_tbody">
                                    <t
                                        t-foreach="subscription.sale_subscription_line_ids"
                                        t-as="line"
                                    >
                                        <tr
                                            class="bg-200 font-weight-bold o_line_section"
                                        >
                                                <td name="td_product">
                                                    <span
                                                    t-field="line.product_id.name"
                                                />
                                                <td name="td_name" class="d-none">
                                                    <span t-field="line.name" />
                                                </td>
                                                </td>
                                                <td
                                                name="td_quantity"
                                                class="text-right"
                                            >
                                                    <span
                                                    t-field="line.product_uom_qty"
                                                />
                                                </td>
                                                <td
                                                name="td_price_unit"
                                                class="text-right"
                                            >
                                                    <span
                                                    t-field="line.price_unit"
                                                    t-options='{"widget": "monetary", "display_currency": subscription.currency_id}'
                                                />
                                                </td>
                                                <td
                                                name="td_discount"
                                                class="text-right"
                                            >
                                                    <span t-field="line.discount" />
                                                </td>
                                                <td
                                                name="td_price_subtotal"
                                                class="text-right"
                                            >
                                                    <span
                                                    t-field="line.price_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": subscription.currency_id}'
                                                />
                                                </td>

                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                        <div
                            id="description"
                            class="row mt32"
                            t-if="subscription.template_id.description"
                        >
                            <div class="col-12 col-md-6 mb-4 mb-md-0">
                                <h6>
                                    <strong>Terms and conditions</strong>
                                </h6>
                                <div class="row">
                                    <div class="col pl-sm-0">
                                        <span
                                            t-field="subscription.template_id.description"
                                        />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
