<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="contract_contract_customer_form_view" model="ir.ui.view">
        <field name="name">contract.contract.invoice.address.details</field>
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract.contract_contract_customer_form_view" />
        <field name="arch" type="xml">

            <field name="partner_invoice_id" position="after">
                <label
                    for="partner_invoice_id_street"
                    string=" "
                    groups="sale.group_delivery_invoice_address"
                />
                <div
                    class="o_row mr16"
                    id="partner-street-div"
                    groups="sale.group_delivery_invoice_address"
                >
                    <field
                        name="partner_invoice_id_street"
                        placeholder="Street"
                        attrs="{'readonly': [('partner_invoice_id', '=', False)]}"
                    />
                    <field
                        name="partner_invoice_id_street2"
                        placeholder="Street specifier"
                        attrs="{'readonly': [('partner_invoice_id', '=', False)]}"
                    />
                </div>

                <label
                    for="partner_invoice_id_zip"
                    string=" "
                    groups="sale.group_delivery_invoice_address"
                />
                <div
                    class="o_row mr16"
                    id="partner-zip-div"
                    groups="sale.group_delivery_invoice_address"
                >
                    <field
                        name="partner_invoice_id_zip"
                        placeholder="Zip"
                        attrs="{'readonly': [('partner_invoice_id', '=', False)]}"
                    />
                    <field
                        name="partner_invoice_id_city"
                        placeholder="City"
                        attrs="{'readonly': [('partner_invoice_id', '=', False)]}"
                    />
                </div>

            </field>
        </field>
    </record>
</odoo>
