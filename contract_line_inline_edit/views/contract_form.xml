<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="contract_contract_form_view" model="ir.ui.view">
        <field name="name">Contract form: cost price</field>
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract.contract_contract_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='contract_line_ids']/tree" position="attributes">
                <attribute name="editable">bottom</attribute>
            </xpath>

            <xpath expr="//field[@name='contract_line_ids']/tree/field[@name='last_date_invoiced']" position="after">
                <button
                    name="action_open_line"
                    type="object"
                    icon="fa-external-link text-success"
                    optional="show"
                />
            </xpath>

        </field>
    </record>
</odoo>
