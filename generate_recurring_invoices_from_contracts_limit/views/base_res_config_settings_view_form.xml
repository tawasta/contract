<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record
    id="base_res_config_settings_contract_recurring_invoice_limit"
    model="ir.ui.view"
  >
        <field
      name="name"
    >generate_recurring_invoices_from_contracts_limit.settings_view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invoicing_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label
              for="contract_recurring_invoice_limit"
              string="Invoice generation limit"
            />
                        <div class="text-muted">
                            Recurring invoice generation limit.
                        </div>
                        <field name="contract_recurring_invoice_limit" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
